<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Load property file -->
    <context:property-placeholder location="classpath:sports.properties"/>

    <!-- Define your beans here -->
    <bean id="myFortune"
          class="com.heastie.fortunes.RandomFortuneService">
    </bean>

    <bean id="myCoach"
          class="com.heastie.coaches.BasketballCoach">
        <constructor-arg ref="myFortune"></constructor-arg>
    </bean>

    <bean id="myCricketCoach"
          class="com.heastie.coaches.CricketCoach">
        <property name="fortuneService" ref="myFortune"/>
        <property name="emailAddress" value="${will.email}"/>
        <property name="team" value="${will.team}"></property>
    </bean>
</beans>





